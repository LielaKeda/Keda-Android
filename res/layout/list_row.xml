<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:padding="5dip" >
        
	<ImageView
	    android:id="@+id/list_image"
        android:layout_width="800dip"
        android:layout_height="800dip"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/rihanna" />

	<TextView
	    android:id="@+id/pirma"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/list_image"
	    android:layout_centerHorizontal="true"
	    android:visibility="invisible" />

	<TextView
	    android:id="@+id/otra"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/bid"
	    android:layout_alignLeft="@+id/bid"
	    android:visibility="invisible" />

	<TextView
	    android:id="@+id/albums"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/list_image"
	    android:layout_alignLeft="@+id/list_image"
	    android:layout_alignRight="@+id/list_image"
	    android:background="#E2E2E2"
	    android:textColor="#000000"
	    android:text="Medium Text"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView
	    android:id="@+id/reitings"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/albums"
	    android:layout_alignBottom="@+id/albums"
	    android:layout_alignRight="@+id/list_image"
	    android:textColor="#000000"
	    android:text="Medium Text"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>