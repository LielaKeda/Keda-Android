        <activity
            android:name="com.example.androidhive.ParLietotni"
            android:label="@string/title_activity_par_lietotni" >
        </activity>
        <activity
            android:name="com.example.androidhive.SinglePic"
            android:label="@string/title_activity_single_pic" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
